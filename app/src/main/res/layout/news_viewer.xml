<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/news_viewer__news_image"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/news1"
        android:contentDescription="news_image" />

    <TextView
        android:id="@+id/news_viewer__header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/titan_white"
        android:background="@color/lunar_green"
        android:textSize="24sp"
        android:padding="12dp"
        tools:text="Заголовок новости"
        app:layout_constraintBottom_toBottomOf="@id/news_viewer__news_image"
        app:layout_constraintTop_toBottomOf="@+id/news_viewer__news_image" />


    <TextView
        android:id="@+id/news_viewer__description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:scrollbars="vertical"
        tools:text="Beginning Текст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новостиТекст новости"
        app:layout_constraintVertical_bias="0"
        android:maxHeight="275dp"
        app:layout_constraintBottom_toTopOf="@id/news_viewer__news_info"
        app:layout_constraintTop_toBottomOf="@+id/news_viewer__header" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/news_viewer__news_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/news_viewer__like_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/heart_plug"
            android:contentDescription="Like" />

        <TextView
            android:id="@+id/news_viewer__like_count"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            tools:text="155"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/news_viewer__like_img" />

        <TextView
            android:id="@+id/news_viewer__date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            tools:text="01.01.2021"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

